<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Back"
                style="@style/Widget.Material3.Button.TextButton" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GitHub Authentication"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="16dp" />

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To access GitHub repositories, you need a Personal Access Token (PAT):"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="16dp" />

        <!-- Steps -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Click 'Open GitHub Token Page' below\n2. Generate a token with 'repo' scope\n3. Copy the token and paste it here\n4. Click 'Test Token' to verify\n5. Click 'Save Token' to complete setup"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="20dp"
            android:lineSpacingExtra="4dp" />

        <!-- Open GitHub Button -->
        <Button
            android:id="@+id/openGitHubButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔗 Open GitHub Token Page"
            android:layout_marginBottom="24dp"
            style="@style/Widget.Material3.Button.UnelevatedButton" />

        <!-- Token Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Personal Access Token">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tokenEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:fontFamily="monospace"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/testTokenButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Test Token"
                style="@style/Widget.Material3.Button.TextButton" />

            <Button
                android:id="@+id/saveTokenButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Save Token"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/loadingProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:text="Enter your GitHub Personal Access Token" />

        <!-- Security Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔒 Your token is stored securely using Android's EncryptedSharedPreferences and never transmitted to third parties."
            android:textSize="12sp"
            android:textColor="?android:attr/textColorTertiary"
            android:layout_marginTop="24dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp"
            android:drawablePadding="8dp" />

    </LinearLayout>
</ScrollView>