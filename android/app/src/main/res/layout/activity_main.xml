<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?attr/colorPrimary">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GitHub Issues"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_issue_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="+ New"
            android:textColor="?attr/colorOnPrimary" />
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/load_issues_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Issues"
            android:textColor="?attr/colorOnPrimary" />
    </LinearLayout>

    <!-- Repository Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repository:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/repository_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="owner/repository"
                android:text="el-el-san/git-issue-app"
                android:singleLine="true" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/set_repository_button"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Status Text -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="ðŸŽ‰ GitHub Issue Manager\n\nTap 'Load Issues' to fetch data"
        android:textSize="16sp" />

    <!-- Debug Log Section -->
    <LinearLayout
        android:id="@+id/debug_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Debug Log:"
                android:textStyle="bold"
                android:textSize="14sp" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/copy_log_button"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copy"
                android:textSize="12sp"
                android:minHeight="32dp" />
                
            <com.google.android.material.button.MaterialButton
                android:id="@+id/clear_log_button"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textSize="12sp"
                android:minHeight="32dp" />
        </LinearLayout>
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@android:color/black"
            android:padding="8dp">
            
            <TextView
                android:id="@+id/debug_log_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:text="Debug log will appear here..."
                android:textIsSelectable="true" />
        </ScrollView>
    </LinearLayout>

    <!-- Issues RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/issues_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:visibility="gone" />

</LinearLayout>